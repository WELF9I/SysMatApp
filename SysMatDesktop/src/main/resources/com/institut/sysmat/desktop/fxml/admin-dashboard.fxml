<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<StackPane xmlns="http://javafx.com/javafx/17.0.2-ea" 
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.institut.sysmat.desktop.controller.AdminDashboardController"
           style="-fx-background-color: #f5f7fa;">
    
    <!-- Main Layout -->
    <VBox spacing="0" prefWidth="1400" prefHeight="800">
        
        <!-- Header -->
        <HBox prefHeight="70" style="-fx-background-color: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);"
              alignment="CENTER_LEFT" spacing="20">
            
            <!-- Logo and Title -->
            <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 0 0 0 30;">
                <ImageView fitWidth="40" fitHeight="40">
                    <Image url="@../images/logo.png" />
                </ImageView>
                <VBox spacing="2">
                    <Label text="SysMat" style="-fx-text-fill: #2c3e50; -fx-font-size: 20; -fx-font-weight: bold;" />
                    <Label text="Tableau de bord Administrateur" 
                           style="-fx-text-fill: #7f8c8d; -fx-font-size: 12;" />
                </VBox>
            </HBox>
            
            <!-- Spacer -->
            <Region HBox.hgrow="ALWAYS" />
            
            <!-- User Info -->
            <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 0 30 0 0;">
                <VBox alignment="CENTER_RIGHT" spacing="2">
                    <Label fx:id="welcomeLabel" text="Bienvenue, Admin" 
                           style="-fx-text-fill: #2c3e50; -fx-font-size: 14; -fx-font-weight: bold;" />
                    <Label text="Administrateur" 
                           style="-fx-text-fill: #7f8c8d; -fx-font-size: 11;" />
                </VBox>
                <ImageView fitWidth="40" fitHeight="40" style="-fx-background-color: #3498db; -fx-background-radius: 20;">
                    <Image url="@../images/icons/user.png" />
                </ImageView>
            </HBox>
            
        </HBox>
        
        <!-- Content Area -->
        <HBox spacing="0" VBox.vgrow="ALWAYS">
            
            <!-- Sidebar -->
            <VBox prefWidth="250" style="-fx-background-color: #2c3e50;" spacing="0">
                
                <!-- Navigation Menu -->
                <VBox spacing="10" style="-fx-padding: 30 20;">
                    
                    <Button fx:id="dashboardButton" text="Tableau de bord" 
                            styleClass="sidebar-button-active">
                        <graphic>
                            <ImageView fitWidth="20" fitHeight="20">
                                <Image url="@../images/icons/dashboard.png" />
                            </ImageView>
                        </graphic>
                    </Button>
                    
                    <Button fx:id="materialsButton" text="Matériels" 
                            styleClass="sidebar-button" onAction="#navigateToMaterials">
                        <graphic>
                            <ImageView fitWidth="20" fitHeight="20">
                                <Image url="@../images/icons/materials.png" />
                            </ImageView>
                        </graphic>
                    </Button>
                    
                    <Button fx:id="reservationsButton" text="Réservations" 
                            styleClass="sidebar-button" onAction="#navigateToReservations">
                        <graphic>
                            <ImageView fitWidth="20" fitHeight="20">
                                <Image url="@../images/icons/reservations.png" />
                            </ImageView>
                        </graphic>
                    </Button>
                    
                    <Button fx:id="usersButton" text="Utilisateurs" 
                            styleClass="sidebar-button" onAction="#navigateToUsers">
                        <graphic>
                            <ImageView fitWidth="20" fitHeight="20">
                                <Image url="@../images/icons/users.png" />
                            </ImageView>
                        </graphic>
                    </Button>
                    
                    <Button fx:id="reportsButton" text="Rapports" 
                            styleClass="sidebar-button" onAction="#navigateToReports">
                        <graphic>
                            <ImageView fitWidth="20" fitHeight="20">
                                <Image url="@../images/icons/reports.png" />
                            </ImageView>
                        </graphic>
                    </Button>
                    
                    <VBox VBox.vgrow="ALWAYS" />
                    
                    <Line startX="0" endX="210" stroke="#34495e" strokeWidth="1" />
                    
                    <Button fx:id="logoutButton" text="Déconnexion" 
                            styleClass="sidebar-button-logout" onAction="#handleLogout">
                        <graphic>
                            <ImageView fitWidth="20" fitHeight="20">
                                <Image url="@../images/icons/logout.png" />
                            </ImageView>
                        </graphic>
                    </Button>
                    
                </VBox>
                
            </VBox>
            
            <!-- Main Content -->
            <VBox spacing="20" style="-fx-padding: 30;" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
                
                <!-- Stats Cards -->
                <HBox spacing="20">
                    <VBox styleClass="stat-card" prefWidth="250" prefHeight="120">
                        <Label text="Réservations en attente" 
                               style="-fx-text-fill: #7f8c8d; -fx-font-size: 14;" />
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label fx:id="pendingReservationsLabel" text="0" 
                                   style="-fx-text-fill: #2c3e50; -fx-font-size: 36; -fx-font-weight: bold;" />
                            <ImageView fitWidth="30" fitHeight="30">
                                <Image url="@../images/icons/pending.png" />
                            </ImageView>
                        </HBox>
                        <Label text="À valider" 
                               style="-fx-text-fill: #95a5a6; -fx-font-size: 12;" />
                    </VBox>
                    
                    <VBox styleClass="stat-card" prefWidth="250" prefHeight="120">
                        <Label text="Matériels disponibles" 
                               style="-fx-text-fill: #7f8c8d; -fx-font-size: 14;" />
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label fx:id="availableMaterialsLabel" text="0" 
                                   style="-fx-text-fill: #27ae60; -fx-font-size: 36; -fx-font-weight: bold;" />
                            <ImageView fitWidth="30" fitHeight="30">
                                <Image url="@../images/icons/available.png" />
                            </ImageView>
                        </HBox>
                        <Label fx:id="totalMaterialsLabel" text="sur 0 matériels" 
                               style="-fx-text-fill: #95a5a6; -fx-font-size: 12;" />
                    </VBox>
                    
                    <VBox styleClass="stat-card" prefWidth="250" prefHeight="120">
                        <Label text="Stocks bas" 
                               style="-fx-text-fill: #7f8c8d; -fx-font-size: 14;" />
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label fx:id="lowStockMaterialsLabel" text="0" 
                                   style="-fx-text-fill: #e74c3c; -fx-font-size: 36; -fx-font-weight: bold;" />
                            <ImageView fitWidth="30" fitHeight="30">
                                <Image url="@../images/icons/warning.png" />
                            </ImageView>
                        </HBox>
                        <Label text="Besoin de réapprovisionnement" 
                               style="-fx-text-fill: #95a5a6; -fx-font-size: 12;" />
                    </VBox>
                </HBox>
                
                <!-- Charts and Tables -->
                <HBox spacing="20" VBox.vgrow="ALWAYS">
                    <!-- Left Column -->
                    <VBox spacing="20" prefWidth="700">
                        <!-- Reservations Table -->
                        <VBox styleClass="card" spacing="10">
                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <Label text="Réservations en attente" 
                                       style="-fx-text-fill: #2c3e50; -fx-font-size: 16; -fx-font-weight: bold;" />
                                <Button text="Tout voir" styleClass="small-button" 
                                        onAction="#navigateToReservations" />
                            </HBox>
                            
                            <TableView fx:id="pendingReservationsTable" prefHeight="250">
                                <columns>
                                    <TableColumn fx:id="reservationUserColumn" text="Utilisateur" prefWidth="150" />
                                    <TableColumn fx:id="reservationMaterialColumn" text="Matériel" prefWidth="200" />
                                    <TableColumn fx:id="reservationDateColumn" text="Date/Heure" prefWidth="200" />
                                    <TableColumn fx:id="reservationStatusColumn" text="Statut" prefWidth="100" />
                                </columns>
                            </TableView>
                        </VBox>
                        
                        <!-- Usage Chart -->
                        <VBox styleClass="card" spacing="10">
                            <Label text="Utilisation des matériels" 
                                   style="-fx-text-fill: #2c3e50; -fx-font-size: 16; -fx-font-weight: bold;" />
                            <BarChart fx:id="usageChart" prefHeight="200">
                                <xAxis>
                                    <CategoryAxis fx:id="xAxis" />
                                </xAxis>
                                <yAxis>
                                    <NumberAxis fx:id="yAxis" />
                                </yAxis>
                            </BarChart>
                        </VBox>
                    </VBox>
                    
                    <!-- Right Column -->
                    <VBox spacing="20" prefWidth="400">
                        <!-- Low Stock Table -->
                        <VBox styleClass="card" spacing="10">
                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <Label text="Stocks bas" 
                                       style="-fx-text-fill: #2c3e50; -fx-font-size: 16; -fx-font-weight: bold;" />
                                <Button text="Réapprovisionner" styleClass="small-button" 
                                        onAction="#navigateToMaterials" />
                            </HBox>
                            
                            <TableView fx:id="lowStockTable" prefHeight="480">
                                <columns>
                                    <TableColumn fx:id="materialNameColumn" text="Matériel" prefWidth="150" />
                                    <TableColumn fx:id="materialStockColumn" text="Stock" prefWidth="80" />
                                    <TableColumn fx:id="materialLocationColumn" text="Localisation" prefWidth="150" />
                                </columns>
                            </TableView>
                        </VBox>
                    </VBox>
                </HBox>
                
            </VBox>
            
        </HBox>
        
    </VBox>
    
    <!-- Loading Overlay -->
    <StackPane fx:id="loadingPane" visible="false" 
               style="-fx-background-color: rgba(245,247,250,0.9);">
        <VBox alignment="CENTER" spacing="20">
            <ProgressIndicator fx:id="loadingIndicator" progress="-1" 
                               prefWidth="60" prefHeight="60" />
        </VBox>
    </StackPane>
    
</StackPane>